<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".CreateNoteFragment">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20ssp"
        android:layout_marginStart="@dimen/_10ssp"
        android:layout_marginBottom="@dimen/_10ssp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_back"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/imgDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20ssp"
        android:layout_marginEnd="@dimen/_10ssp"
        android:layout_marginBottom="@dimen/_10ssp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_tick"
        app:tint="@color/white" />

    <EditText
        android:id="@+id/etNoteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10ssp"
        android:background="@null"
        android:inputType="text"
        android:textColorHint="@color/gray"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/manrope_bold"
        app:layout_constraintTop_toBottomOf="@id/imgBack"
        android:layout_margin="@dimen/_10ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:hint="@string/notes_title"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_10ssp"
        android:textColorHint="@color/gray"
        android:textSize="@dimen/_8ssp"
        android:fontFamily="@font/manrope_bold"
        app:layout_constraintTop_toBottomOf="@id/etNoteTitle"
        android:layout_marginTop="@dimen/_5ssp"
        android:layout_marginBottom="@dimen/_5ssp"
        android:layout_marginEnd="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_10ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/gray"
        android:maxLines="1"
        android:ellipsize="end"/>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_10ssp"
        app:layout_constraintTop_toBottomOf="@id/tvDateTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

<View
    android:id="@+id/colorView"
    android:layout_width="@dimen/_5ssp"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:layout_marginStart="@dimen/_5ssp"/>
        <EditText
            android:id="@+id/etNoteSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10ssp"
            android:inputType="text"
            android:textColorHint="@color/gray"
            android:fontFamily="@font/manrope_regular"
            android:textColor="@color/white"
            android:background="@null"
            android:textSize="@dimen/_10ssp"
            android:hint="@string/notes_sub_title"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageNote"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/l1"
        android:layout_marginStart="@dimen/_10ssp"
        android:layout_marginEnd="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_10ssp"
        android:visibility="gone"
        android:layout_height="300dp"/>

    <EditText
        android:id="@+id/etNoteDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10ssp"
        android:textColorHint="@color/gray"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/manrope_regular"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/imageNote"
        android:layout_margin="@dimen/_10ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:inputType="textMultiLine"
        android:hint="@string/notes_desc" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <ImageView
            android:id="@+id/imgMore"
            android:layout_gravity="center"
            android:layout_width="@dimen/_24ssp"
            android:layout_height="@dimen/_24ssp"
            android:src="@drawable/img_bar"/>
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>